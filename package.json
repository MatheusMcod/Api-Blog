{
  "name": "api-blog",
  "version": "1.0.0",
  "description": "Api para controle de conteudo de um blog.",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run swagger",
    "build": "tsc",
    "preserve": "npm run build",
    "pre:dev": "npm run swagger",
    "dev": "cross-env NODE_ENV=development concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "swagger": "tsoa spec",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  }
}
