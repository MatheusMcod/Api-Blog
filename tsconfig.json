{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs", 
    "outDir": "./build",
    "checkJs": true,     
    "experimentalDecorators": true,      
    "emitDecoratorMetadata": true,   
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true    
  }
}
